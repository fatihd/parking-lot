<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.tarnet.deneme.domain.User" table="ZZZ_USERS">
        <id name="id" column="ID">
            <generator class="sequence">
                <param name="sequence_name">SEQ_ZZZ_USERS</param>
            </generator>
        </id>

        <version name="version"/>

        <property name="ad" column="AD" />

        <bag name="spot" table="ZZZ_SPOTS" cascade="all-delete-orphan" inverse="true"
             lazy="true">
            <key column="USER_ID"/>
            <one-to-many class="com.tarnet.deneme.domain.Spot"/>
        </bag>

    </class>
</hibernate-mapping>
