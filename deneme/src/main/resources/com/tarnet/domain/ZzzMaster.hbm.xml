<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.tarnet.domain.ZzzMaster" table="ZZZ_MASTER">
        <id name="id" column="ID">
            <generator class="sequence">
                <param name="sequence_name">SEQ_ZZZ_MASTER</param>
            </generator>
        </id>

        <version name="version"/>

        <property name="ad" column="AD" />

        <bag name="detaylar" table="ZZZ_DETAIL" cascade="all-delete-orphan" inverse="true"
             lazy="true">
            <key column="MASTER_ID"/>
            <one-to-many class="com.tarnet.domain.ZzzDetail"/>
        </bag>

    </class>
</hibernate-mapping>
